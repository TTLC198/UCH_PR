<UserControl x:Class="UCH_PR_1.Views.RegistrationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModels="clr-namespace:UCH_PR_1.ViewModels"
        xmlns:validation1="clr-namespace:UCH_PR_1.Utils.Validation"
        xmlns:s="https://github.com/canton7/Stylet"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:RegistrationViewModel}">
    <DockPanel
        Background="{StaticResource MainFirst}"
        LastChildFill="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel
                HorizontalAlignment="Right"
                Margin="15 0 0 0"
                LastChildFill="False">
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Id Number:" />
                    <TextBox
                        Style="{StaticResource InputTextBox}"
                        IsReadOnly="True"
                        Text="{Binding User.UserId}">
                    </TextBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="ФИО:" />
                    <TextBox
                        Style="{StaticResource InputTextBox}">
                        <materialDesign:ValidationAssist.HorizontalAlignment>
                            Right
                        </materialDesign:ValidationAssist.HorizontalAlignment>
                        <TextBox.Text>
                            <Binding
                                Path="User.FullName"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnExceptions="True">
                                <Binding.ValidationRules>
                                    <validation1:NotEmptyValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Пол:" />
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding Genders}"
                        SelectedItem="{Binding SelectedGender}"
                        Style="{StaticResource ComboBoxInputStyle}">
                    </ComboBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Роль:" />
                    <ComboBox
                        ItemsSource="{Binding Roles}"
                        SelectedItem="{Binding SelectedRole}"
                        Style="{StaticResource ComboBoxInputStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Role1}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Email:" />
                    <TextBox
                        Style="{StaticResource InputTextBox}">
                        <materialDesign:ValidationAssist.HorizontalAlignment>
                            Right
                        </materialDesign:ValidationAssist.HorizontalAlignment>
                        <TextBox.Text>
                            <Binding
                                Path="User.Email"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnExceptions="True">
                                <Binding.ValidationRules>
                                    <validation1:NotEmptyValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                    <validation1:EmailValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Телефон:" />
                    <TextBox
                        Style="{StaticResource InputTextBox}">
                        <materialDesign:ValidationAssist.HorizontalAlignment>
                            Right
                        </materialDesign:ValidationAssist.HorizontalAlignment>
                        <TextBox.Text>
                            <Binding
                                Path="User.FormattedPhoneNumber"
                                StringFormat="{}{0:(###)###-####}"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnExceptions="True">
                                <Binding.ValidationRules>
                                    <validation1:NotEmptyValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Направление:" />
                    <ComboBox
                        Style="{StaticResource ComboBoxInputStyle}">
                    </ComboBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Мероприятие:" />
                    <ComboBox
                        Style="{StaticResource ComboBoxInputStyle}">
                    </ComboBox>
                </StackPanel>
            </DockPanel>
            <DockPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="15 0"
                LastChildFill="False">
                <Border
                    DockPanel.Dock="Top"
                    Margin="0 0 0 25"
                    HorizontalAlignment="Right"
                    MinHeight="160"
                    Width="{Binding ElementName=PasswordInputBox, Path=ActualWidth}"
                    BorderBrush="Black"
                    BorderThickness="1">
                    <Grid>
                        <Image/>
                        <TextBlock
                            VerticalAlignment="Center"
                            TextAlignment="Center">
                            Фото
                        </TextBlock>
                    </Grid>
                </Border>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Пароль:" />
                    <PasswordBox
                        x:Name="PasswordInputBox"
                        Style="{StaticResource InputPasswordBox}"
                        materialDesign:PasswordBoxAssist.IsPasswordRevealed="{Binding IsPasswordVisible}">
                        <materialDesign:PasswordBoxAssist.Password>
                            <Binding
                                Path="User.PhoneNumber"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnExceptions="True">
                                <Binding.ValidationRules>
                                    <validation1:NotEmptyValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                    <validation1:PasswordValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </materialDesign:PasswordBoxAssist.Password>
                        <materialDesign:HintAssist.Hint>
                            <TextBlock
                                Margin="4, 0"
                                Text="Password" />
                        </materialDesign:HintAssist.Hint>
                    </PasswordBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <TextBlock
                        Style="{StaticResource InputLabelStyle}"
                        Text="Повтор пароля:" />
                    <PasswordBox
                        Style="{StaticResource InputPasswordBox}"
                        materialDesign:PasswordBoxAssist.IsPasswordRevealed="{Binding IsPasswordVisible}">
                        <materialDesign:PasswordBoxAssist.Password>
                            <Binding
                                Path="User.PhoneNumber"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnExceptions="True">
                                <Binding.ValidationRules>
                                    <validation1:NotEmptyValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                    <validation1:PasswordValidationRule
                                        ValidatesOnTargetUpdated="False"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </materialDesign:PasswordBoxAssist.Password>
                        <materialDesign:HintAssist.Hint>
                            <TextBlock
                                Margin="4, 0"
                                Text="Re-enter password" />
                        </materialDesign:HintAssist.Hint>
                    </PasswordBox>
                </StackPanel>
                <StackPanel
                    Style="{StaticResource InputGroupRightAlignmentPanel}">
                    <CheckBox
                        Style="{StaticResource InputCheckboxStyle}" 
                        IsChecked="{Binding IsPasswordVisible, Mode=TwoWay}"/>
                    <TextBlock
                        Width="{Binding ElementName=PasswordInputBox, Path=ActualWidth}"
                        FontSize="12"
                        HorizontalAlignment="Left"
                        TextAlignment="Left"
                        Style="{StaticResource InputLabelStyle}"
                        Text="Видимый пароль" />
                </StackPanel>
                <Grid
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Right"
                    Width="{Binding ElementName=PasswordInputBox, Path=ActualWidth}"
                    Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Content="Ок"
                        Style="{StaticResource MenuButtons}" />
                    <Button
                        Grid.Column="1"
                        Content="Отмена"
                        Style="{StaticResource MenuButtons}" />
                </Grid>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>